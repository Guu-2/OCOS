<div class="container mt-5">
    <!-- Thông tin khóa học -->
    <div class="row">
        <h3>Thêm khóa học mới</h3>
        <div class="col-12 mb-3">
            <div class="row">
                <label for="inputCourseTitle" class="col-sm-2 col-form-label">Tiêu đề</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputCourseTitle" placeholder="Tiêu đề">
                </div>
            </div>
        </div>

        <div class="col-12 mb-3">
            <div class="row">
                <label for="inputCourseTPrice" class="col-sm-2 col-form-label">Giá</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="inputCoursePrice" placeholder="VNĐ">
                </div>
            </div>
        </div>

        <div class="col-12 mb-3">
            <div class="row">
                <label for="inputCategory" class="col-sm-2 col-form-label">Danh mục</label>
                <div class="col-sm-10">
                    <select id="inputCategory" class="form-select">
                        <option selected>Lập trình</option>
                        <option>Âm nhạc</option>
                        <option>Thiết kế</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="col-12 mb-3">
            <div class="form-group">
                <div class="row">
                    <label for="mota" class="col-sm-2 col-form-label">Mô tả:</label>
                    <div class="col-sm-10 d-flex justify-content-between">
                        <input type="text" class="form-control me-3" id="mota">
                        <button type="button" class="btn btn-primary" id="themMota">Thêm</button>
                    </div>
                </div>
            </div>

            <ul class="list-group mt-3" id="listMota"></ul>
        </div>
    </div>

    <!-- Thêm chương -->
    <div class="row">
        <div class="col-12">
            <button id="addChapterBtn" class="btn btn-primary">Thêm Chương học</button>
            <div id="addChapterForm" class="mt-3 d-none">
                <div class="mb-3">
                    <div class="row">
                        <label for="chapterName" class="col-sm-2 col-form-label">Tên chương học</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="chapterName">
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="row">
                        <label for="chapterTitle" class="col-sm-2 col-form-label">Tiêu đề</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="chapterTitle">
                        </div>
                    </div>
                </div>
                <div class="float-end">
                    <button id="confirmChapterBtn" class="btn btn-success me-2">Xác nhận thêm</button>
                    <button id="cancelChapterBtn" class="btn btn-danger">Hủy</button>
                </div>
            </div>
        </div>
        <div id="chapters" class="mt-3 mb-3"></div>
    </div>

    <div class="row">
        <!-- Button thêm khóa học -->
        <div class="col-12 mb-3">
            <button id="addCourseBtn" type="button" class="btn btn-success float-end">Thêm khóa học</button>
        </div>
    </div>
</div>


<!-- Modal thêm video bài giảng -->
<div id="videoModalCreate" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm video bài giảng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <div class="row">
                        <label for="videoTitle" class="col-sm-2 col-form-label">Tiêu đề</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="videoTitle">
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="row">
                        <label for="videoLink" class="col-sm-2 col-form-label">Embed url</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="videoLink">
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="row">
                        <label for="videoDesc" class="col-sm-2 col-form-label">Mô tả</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="videoDesc">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button id="confirmVideoBtn" type="button" class="btn btn-primary">Xác nhận thêm</button>
            </div>
        </div>
    </div>
</div>

<script src="../../javascripts/create-course.js"></script>